{
  "expo": {
    "name": "NoteDo",
    "slug": "NoteDo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "notedo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED", 
        "VIBRATE",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#FF8C00",
          "defaultChannel": "default",
          "iosDisplayInForeground": true,
          "androidMode": "default",
          "androidCollapsedTitle": "#{unread_notifications} nuevas notificaciones"
        }
      ],
      [
        "expo-background-task",
        {
          "android": {
            "background_modes": ["background-task"]
          },
          "ios": {
            "background_modes": ["background-fetch", "background-processing"]
          }
        }
      ],
      [
        "expo-task-manager"
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
